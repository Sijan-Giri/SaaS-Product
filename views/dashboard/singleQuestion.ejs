      <div class="container-fluid">
          <% questions.forEach((question) => { %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title fw-semibold mb-4"><%- question?.title %> </h5>
                <p class="mb-0"><%- question?.description %>  </p>
              </div>
              <img src="http://localhost:3000/<%- question?.questionImage %>" height="300px" width="60%" alt="questionImage" srcset="">
            </div>
            <input type="hidden" id="questionId" name="questionId" value="<%- question?.id %>">
          <% }) %>

      </div>
        <% answers.forEach((answer) => { %>
          <div class="card">
            <div class="card-body">
              <p class="mb-0">Answer <%- answer.id %> : <%- answer.answer %></p>
              <i>Answered By:- <%- answer.username %></i> <br>
              <i> <%- answer.created_At.toString().slice(0,15) %></i>
            </div>
          </div>
        <% }) %>

      <h4>Your Answer:-</h4> <br>
      <form id="answerForm">
        <div id="editor">
          <p>Your answer goes here...</p>
          <p><br /></p>
